<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/books/new.css" />
<%- include('../partials/nav') %>


<main>

<h1><%= title %></h1>

<table id="list">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% authors.forEach((author) => { %>
    <tr>
      <td><%= author.name %></td>
      <td><a href="/authors/<%= author._id %>">Details</a></td>
    </tr>
    <% }) %>
  </tbody>
</table>

<div>
  <a href="/authors/new">Add Author</a>
</div>

</main>

<%- include("../partials/footer") %>