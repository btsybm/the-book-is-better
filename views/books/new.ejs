<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/books/new.css" />
<%- include('../partials/nav') %>
<main>
  <!-- <h1><%= title %></h1> -->


<h1>ADD BOOK</h1>

<form action="/books" method="POST">

  <label for="title-input">Title:  <input type="text" name="title" id="title-input" style="text-transform:uppercase" required></label>
  <br>

  <label for="author-input">Author:</label>
  <select name="author" >
    <% authors.forEach(function(author) { %>
      <option value="<%= author._id %>"><%= author.name %></option>
    <% }) %>
  </select>



  
  <p class='formAdd'>Author not in our system?  Add them <a class='formAdd' href="/authors/new">here.</a></p>

<br>

  <label for="year-input">Year Published: <input type="number" name="year" id="year-input" max=2030 required></label>
  <br>

  <!-- <label for="image-url-input">Link to Book Cover Image:  <input type="text" placeholder="ex. https://i.imgur.com/.jpg" name="imageUrl" id="image-url-input"></label>
  <br> -->
  <button type="submit">Add Book</button>
</form>



</main>

