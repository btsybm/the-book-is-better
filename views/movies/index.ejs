<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/tables.css" />
<%- include('../partials/nav') %>


<main>

<h1 class="center"><%= title %></h1>
<table id="list">
  <tbody>
    <% movies.forEach((movie) => { %>
    <tr>
      <td><a href="/movies/<%= movie._id %>"><%= movie.title %></a> based on the book <%= movie.sourceMaterial.title %></td>
      <td><%= movie.format %></td>
      <td><%= movie.year %></td>
    </tr>
    <% }) %>
  </tbody>
</table>

<div class='center'>
  <a href="/movies/new" class="button">ADD MOVIE OR SHOW<i class="icon-chevron-right"></i></a>
</div>

</main>

<%- include("../partials/footer") %>