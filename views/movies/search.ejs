<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movie/search.css" />
<%- include('../partials/nav') %>
<main>
  <h1>Movie & TV Series Results:</h1>
  <% let movieInterval=0 %>
    <% if (movies.length> 0) { %>
      <% movies.forEach(movie=> { %>
        <% if (movieInterval % 2===0) { %>
          <div>
            <% } %>
              <div>
                <div class='card'>
                  <a href="/movies/<%= movie._id %>">
                    <div class="container">
                      <h4><%=movie.title %> (<%=movie.format %> <%= movie.year %>)</h4>
                    </div>
                  </a>
                </div>
              </div>
              <% if (movieInterval % 2===1) { %>
          </div>
          <% } %>
            <% movieInterval ++ %>
              <% }) %>
                <% } else { %>
                  <h3>No movies with that title.</h3>
                  <% } %>
  <br>
  <button id='button' style="background-color: transparent;"><a href="/movies/new">Add Movie or Show</a></button>
</main>

<%- include("../partials/footer") %>